<div class="container-fluid bg-dark shadow-lg p-3 mb-5 bg-body rounded fixed-top bg animate">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="fas fa-globe-asia"></i>
        ᴜɴɪᴠᴇʀsᴇ
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto">
          <%= link_to root_path, class: "nav-link #{'active fw-bold' if current_page?(albums_path)}" do %>
            <div class="fa fa-home"></div>
            Home
          <% end %>
          <%= link_to new_album_path, class: "nav-link #{'active fw-bold' if current_page?(new_album_path,class:"link")}" do %>
            <div  class="fas fa-images"></div>
            New Album 
          <% end %>
          <%if user_signed_in?%>
            <%= link_to all_albums_path, class: "nav-link #{'active fw-bold' if current_page?(all_albums_path)}" do %>
              <div  class="fas fa-images"></div>
              All Album 
            <% end %>
            <%= link_to published_album_path, class: "nav-link #{'active fw-bold' if current_page?(published_album_path)}" do %>
              <div  class="fas fa-images"></div>
              Published Album
            <% end %>
            <%= link_to draft_album_path, class: "nav-link #{'active fw-bold' if current_page?(draft_album_path)}" do %>
              <div  class="fas fa-images"></div>
              Draft Album
            <% end %>
          <%end%>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if current_user %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="fa fa-user"></div>
                <b><%= current_user.name %></b>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to edit_user_registration_path, class: "dropdown-item #{'active fw-bold' if current_page?(edit_user_registration_path)}" do %>
                  <div class="fa fa-cog"></div>
                  <b>Account settings</b>
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                  <b>Sign out</b>
                <% end %>
              </ul>
            </li>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "nav-link #{'active fw-bold' if current_page?(new_user_session_path)}" %>
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link #{'active fw-bold' if current_page?(new_user_registration_path)}" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container-fluid alt">
    <% if notice %>
      <p class="alert alert-success alert-dismissible fade show" role="alert"><%= notice %></p>
    <% end %> <% if alert %>
      <p class="alert alert-danger alert-dismissible fade show" role="alert"><%= alert %></p>
    <% end %>
  </div>
</div>
